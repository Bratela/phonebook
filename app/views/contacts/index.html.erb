<%= @aaaa %>

<script type="text/javascript">
	$(document).ready(function(){
		var clicked_on_link = false;
		$('#list .item').click(function(){
			if(clicked_on_link == false){
				alert('busca dados');
			}else{
				alert('não busca dados');
			}
		});

		$('a').click(function(){
			if($(this).attr('data') == 'no_ajax'){
				clicked_on_link = true;
			}else{
				clicked_on_link = false;
			}
		});
	});
</script>
<% if @contacts.length > 0 %>
	<div id="contacts">
		<div id="list" class="list">
			<% @contacts.each do |contact| %>
				<div class="item" onmouseover="App.rollOver(this);" onmouseout="App.rollOut(this);">
					<div class="photo">
						<%# http://twitter.com/users/show/josemarluedke.xml %>
						<img height="48" width="48" src="http://a3.twimg.com/profile_images/1372313760/Josemar_Davi_Luedke_2011-2__c_pia__normal.jpg">
					</div>
					<div class="content">
						<div class="details">
							<div class="text">
								<span class="name"><%= contact.name %></span>
								<span class="group"><%= (contact.group) ? contact.group.name : nbsp %></span>
								<div>
									Phone: <%= contact.phone %>
									&nbsp;&nbsp;
									E-mail: <%= (contact.email == "") ? "--" : (link_to contact.email, "mailto:#{contact.email}", :data => "no_ajax") %>
									&nbsp;&nbsp;
									<%= link_to contact.twitter, "http://twitter.com/#{contact.twitter[1..contact.twitter.length]}", :data => "no_ajax" if contact.twitter%>
								</div>
							</div>
							<div class="more showOver">
								<span class=""></span>
							</div>
							<div class="clear"></div>
						</div>
						<div class="actions">
							<div class="left w100px">
								<a href="#" class="favorite"><span><i></i>Favorite</span></a>
							</div>
							<div class="right w200px textRight showOver hidden">
								<%= link_to raw("<span><i></i>Edit</span>"), edit_contact_path(contact), :title => "Edit", :class => "edit", :data => "no_ajax" %>
								&nbsp;
								<%= link_to raw("<span><i></i>Delete</span>"), contact, :confirm => 'Are you sure?', :method => :delete, :title => "Delete", :class => "delete", :data => "no_ajax" %>
							</div>
						</div>
					</div>
					<div class="clear"></div>
				</div>
			<% end %>
		</div>
		<div id="details">
			Teste de teste
		</div>
	</div>
	<div class="clear"></div>
<% else %>
	<div class="center"><h1>No Contacts</h1></div>
<% end %>