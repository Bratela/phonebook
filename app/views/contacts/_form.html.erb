
<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :cell %><br />
    <%= f.text_field :cell %>
  </div>
  <div class="field">
    <%= f.label :obs %><br />
    <%= f.text_area :obs %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br />
    <%=  f.text_field :birthday %>
    <% # f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.label :group_id %><br />
    <%= f.collection_select :group_id, Group.all, :id, :name%>
  </div>
  <div class="actions">
    <%= submit_tag "Cancel", :type => 'button', :onclick => "location.href='#{contacts_path}'" %>
    <%= f.submit %>
  </div>
<% end %>
